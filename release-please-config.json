{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "include-component-in-tag": true,
  "pull-request-title-pattern": "chore${scope}: release${component} ${version} [skip build]",
  "packages": {
    "charts/genius-core": {
      "component": "genius-core",
      "release-type": "helm",
      "prerelease": false,
      "versioning": "default"
    },
    "charts/genius-core-admin": {
      "component": "genius-core-admin",
      "release-type": "helm",
      "prerelease": false,
      "versioning": "default"
    }
  }
}
